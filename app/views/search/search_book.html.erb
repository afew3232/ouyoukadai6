<div class="row">

	<div class="col-xs-12">
		<h2>Books search for "<%= @word %>"</h2>
		<!--books一覧 -->
		<table class="table table-hover table-inverse">
			<thead>
				<tr>
					<th></th>
					<th>Title</th>
					<th>Opinion</th>
					<th></th>
					<th></th>
					<th colspan="1"></th>
				</tr>
			</thead>

			<tbody>
				<% @books.each do |book| %>
				<tr>
					<td>
						<%= link_to(book.user) do %>
						<%= attachment_image_tag(book.user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %>
						<% end %>
					</td>
					<td><%= link_to book.title, book, class: "book_#{book.id}" %></td>

					<td><%= book.body %></td>

					<% if favorited?(current_user.id, book.id) %> <!--favoriteされてる-->
						<td><%= link_to favorited_count(book.id), favorite_path(id: book.id,user_id: current_user.id), method: :delete,class: "glyphicon glyphicon-heart" %></td>
					<% else %><!--favoriteされてない-->
						<td><%= link_to favorited_count(book.id), favorite_path(book.id), method: :post, class: "glyphicon glyphicon-heart-empty" %></td>
					<% end %>

					<td>コメント数：<%= book_comment_count(book.id) %></td>
				</tr>
				<% end %>
			</tbody>
		</table>

		<!--books一覧 -->


	</div>
</div>