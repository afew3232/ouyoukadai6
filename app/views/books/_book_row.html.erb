
	<td>
		<%= link_to(book.user) do %>
		<%= attachment_image_tag(book.user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %>
		<% end %>
	</td>
	<td><%= link_to book.title, book, class: "book_#{book.id}" %></td>

	<td><%= book.body %></td>

	<% if favorited?(current_user.id, book.id) %> <!--favoriteされてる-->
		<td><%= link_to favorited_count(book.id), favorite_path(id: book.id,user_id: current_user.id), method: :delete,class: "glyphicon glyphicon-heart", remote: true %></td>
	<% else %><!--favoriteされてない-->
		<td><%= link_to favorited_count(book.id), favorite_path(book.id), method: :post, class: "glyphicon glyphicon-heart-empty", remote: true %></td>
	<% end %>

	<td>コメント数：<%= book_comment_count(book.id) %></td>
