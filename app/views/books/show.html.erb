
<div class="row">
	<div class="col-xs-3">

		<h2>User info</h2>
		<%= render 'users/profile', user: @user %>

		<h2>New book</h2>
		<%= render 'books/newform', book: @book_new %>

	</div>

	<div class="col-xs-9">
		<h2>Book detail</h2>

		<table class="table">
			<% if @book.user_id == current_user.id%>
			<tr>
				<td>
					<%= link_to (@book.user) do %>
					<%= attachment_image_tag(@book.user, :profile_image, :fill, 100, 100, fallback: "no-image-mini.jpg") %><br>
					<%= @user.name %>
					<% end %>
				</td>
				<td><%= link_to @book.title, @book %></td>
				<td><%= @book.body %></td>
				<% if favorited?(current_user.id, @book.id) %> <!--favoriteされてる-->
				<td><%= link_to favorited_count(@book.id), favorite_path(id: @book.id, user_id: current_user.id), method: :delete,class: "glyphicon glyphicon-heart" %></td>
				<% else %><!--favoriteされてない-->
				<td><%= link_to favorited_count(@book.id), favorite_path(@book.id), method: :post, class: "glyphicon glyphicon-heart-empty" %></td>
				<% end %>

				<td>コメント数：<%= book_comment_count(@book.id) %></td>
				<td><%= link_to "Edit",edit_book_path(@book), class: "btn-sm btn-success edit_book_#{@book.id}" %></td>
				<td><%= link_to "Destroy",@book, method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger destroy_book_#{@book.id}" %></td>
			</tr>

			<% else %>
			<tr>
				<td>
					<%= link_to (@book.user) do %>
					<%= attachment_image_tag(@book.user, :profile_image, :fill, 100, 100, fallback: "no-image-mini.jpg") %><br>
					<%= @user.name %>
					<% end %>
				</td>
				<td><%= link_to @book.title, @book %></td>
				<td><%= @book.body %></td>
				<% if favorited?(current_user.id, @book.id) %> <!--favoriteされてる-->
				<td><%= link_to favorited_count(@book.id), favorite_path(@book.id), method: :delete,class: "glyphicon glyphicon-heart" %></td>
				<% else %><!--favoriteされてない-->
				<td><%= link_to favorited_count(@book.id), favorite_path(@book.id), method: :post, class: "glyphicon glyphicon-heart-empty" %></td>
				<% end %>

				<td>コメント数：<%= book_comment_count(@book.id) %></td>
				<td></td>
				<td></td>
			</tr>

			<% end %>
		</table>

		<!--Ajaxでコメント一覧呼び出し-->
		<div id="comment_area_id">
			<%= render partial: "book_comments/comment_all", locals: {book_comments: @book_comments, users: @users, book: @book } %>
		</div>


		<% if @book_comment.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@book_comment.errors.count, "error") %> prohibited this book from being saved:</h2>

			<ul>
				<% @book_comment.errors.full_messages.each do |message| %>
				<li><%= message %></li>
				<% end %>
			</ul>
		</div>
		<% end %>




		<!--Ajaxでコメント入力欄呼び出し-->
		<% if user_signed_in? %>
			<%= render partial: "book_comments/comment_form", locals: {book_comment: @book_comment, book: @book} %>
		<% end %>

	</div>
</div>

